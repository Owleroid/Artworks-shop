<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth/new-password.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <% if (errorMessage) { %>
                <div class="user-message--error"><%= errorMessage %></div>
            <% } %>
            <form class="new-password-form" action="/new-password" method="POST">
                <legend>Новый пароль</legend>
                <input type="password" name="password" id="password" placeholder="Новый пароль:" required>
                <input type="hidden" name="userId" value="<%= userId %>">
                <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit">Сохранить</button>
            </form>
        </div>
    </main>

    <%- include('../includes/end.ejs') %>