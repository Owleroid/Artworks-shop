<header>
    <div class="nav">
        <input type="checkbox" id="nav-check">
        <div class="nav-header">
            <div class="logo">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/"><span>Logo</span></a>
            </div>
        </div>
        <div class="nav-btn">
            <label for="nav-check">
                <span></span>
                <span></span>
                <span></span>
            </label>
        </div>
        <div class="nav-links">
            <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
            <a class="<%= path === '/artworks' ? 'active' : '' %>" href="/artworks">Artworks</a>
            <a class="<%= path === '/photos' ? 'active' : '' %>" href="/photos">Photos</a>
            <a class="<%= path === '/sculptures' ? 'active' : '' %>" href="/sculptures">Sculptures</a>
            <a class="<%= path === '/articles' ? 'active' : '' %>" href="/articles">Articles</a>
            <a class="<%= path === '/contacts' ? 'active' : '' %>" href="/contacts">Contacts</a>
            <% if (!isAuthenticated) { %>
            <a class="<%= path === '/log-in' ? 'active' : '' %>" href="/log-in">
                <div> </div>
            </a>
            <% } else { %>
            <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart"><i class="fas fa-shopping-cart"></i></a>
            <form action="/logout" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit"><i class="fas fa-sign-out-alt"></i></button>
            </form>
            <% } %>
        </div>
    </div>
</header>